{
  "name": "status_page",
  "private": true,
  "version": "1.0.0",
  "description": "Status page with buttons whose color reflects click frequency in the last 4 hours",
  "main": "index.js",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently -k -n SERVER,CLIENT -c blue,green \"npm:dev --workspace server\" \"npm:dev --workspace client\"",
    "dev:server": "npm run dev --workspace server",
    "dev:client": "npm run dev --workspace client",
    "build": "npm run build --workspace client",
    "start": "npm run start --workspace server",
    "reset-db": "npm run reset-db --workspace server"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
